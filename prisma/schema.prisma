generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id             String          @id @default(cuid())
  email          String          @unique
  password       String
  role           String          // "company" | "creator"
  createdAt      DateTime        @default(now())
  companyProfile CompanyProfile?
  creatorProfile CreatorProfile?
}

model CompanyProfile {
  id          String   @id @default(cuid())
  userId      String   @unique
  companyName String
  website     String?
  industry    String?
  description String?
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  bounties    Bounty[]
}

model CreatorProfile {
  id             String        @id @default(cuid())
  userId         String        @unique
  displayName    String
  bio            String?
  socialLinks    String?       // JSON string
  followerCounts String?       // JSON string
  tiktokHandle    String?
  instagramHandle String?
  youtubeHandle   String?
  xHandle         String?
  user           User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  applications   Application[]
}

model Bounty {
  id                String        @id @default(cuid())
  companyId         String
  title             String
  description       String
  platform          String        // "tiktok" | "instagram" | "youtube" | "twitter"
  contentType       String        // "video" | "photo" | "story" | "reel" | "post"
  niche             String?
  requirements      String?
  budget            Float
  payPerImpression  String?
  payType           String        @default("fixed") // "fixed" | "per_impression"
  minFollowers      Int           @default(0)
  creatorSlots      Int
  deadline          DateTime
  allowResubmission Boolean       @default(false)
  status            String        @default("open") // "open" | "closed" | "completed"
  createdAt         DateTime      @default(now())
  company           CompanyProfile @relation(fields: [companyId], references: [id], onDelete: Cascade)
  applications      Application[]

  @@index([status])
  @@index([platform])
  @@index([companyId])
}

model Application {
  id          String       @id @default(cuid())
  bountyId    String
  creatorId   String
  pitch         String?
  proposedRate  Float?
  portfolioLink String?
  status      String       @default("pending") // "pending" | "accepted" | "rejected"
  appliedAt   DateTime     @default(now())
  bounty      Bounty       @relation(fields: [bountyId], references: [id], onDelete: Cascade)
  creator     CreatorProfile @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  submissions Submission[]

  @@unique([bountyId, creatorId])
  @@index([bountyId])
  @@index([creatorId])
}

model Submission {
  id            String      @id @default(cuid())
  applicationId String
  contentUrl    String
  notes         String?
  status        String      @default("pending") // "pending" | "approved" | "rejected"
  submittedAt   DateTime    @default(now())
  reviewedAt    DateTime?
  application   Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  payment       Payment?

  @@index([applicationId])
}

model Payment {
  id              String   @id @default(cuid())
  submissionId    String   @unique
  amount          Float
  platformFee     Float
  stripePaymentId String?
  status          String   @default("pending") // "pending" | "completed" | "failed"
  createdAt       DateTime @default(now())
  submission      Submission @relation(fields: [submissionId], references: [id], onDelete: Cascade)
}
